{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AIAI Script Schema",
  "description": "Schema for AIAI Script validation",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "id": {"type": "string"},
        "intent": {"type": "string"},
        "technicalProficiency": {"type": "string"}
      },
      "required": ["id", "intent"]
    },
    "body": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {"type": "string"},
          "id": {"type": "string"},
          "intent": {"type": "string"},
          "shellCommand": {"type": "string"},
          "destructive": {"type": "boolean"}
        },
        "required": ["type", "id", "intent"]
      }
    }
  },
  "required": ["metadata", "body"]
} 