{
  "installation_type": "test",
  "version": "1.0",
  "description": "Clean test viScript for unit testing",
  "phases": [
    {
      "name": "test_phase",
      "description": "Test phase for unit testing",
      "checks": [
        {
          "name": "test_check",
          "description": "Test check with echo command",
          "command": "echo 'test'",
          "validation_type": "output_pattern",
          "expected_pattern": "test",
          "severity": "informational"
        },
        {
          "name": "success_check",
          "description": "Test check that should succeed",
          "command": "echo 'success'",
          "validation_type": "return_value",
          "expected_return": 0,
          "severity": "critical"
        },
        {
          "name": "pattern_check",
          "description": "Test pattern matching",
          "command": "echo 'pattern found'",
          "validation_type": "output_pattern",
          "expected_pattern": "pattern",
          "severity": "informational"
        }
      ]
    },
    {
      "name": "validation_tests",
      "description": "Test various validation types",
      "checks": [
        {
          "name": "both_validation",
          "description": "Test both return value and pattern validation",
          "command": "echo 'both test'",
          "validation_type": "both",
          "expected_return": 0,
          "expected_pattern": "both",
          "severity": "critical"
        },
        {
          "name": "none_validation",
          "description": "Test no validation (execute only)",
          "command": "echo 'execute only'",
          "validation_type": "none",
          "severity": "informational"
        }
      ]
    }
  ],
  "next_step": "next_viscript.json"
} 